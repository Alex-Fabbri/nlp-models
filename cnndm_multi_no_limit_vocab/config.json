{
    "dataset_reader": {
        "type": "multiprocess",
        "base_reader": {
            "type": "copynet",
            "lazy": true,
            "source_token_indexers": {
                "token_characters": {
                    "type": "characters"
                },
                "tokens": {
                    "type": "single_id",
                    "namespace": "source_tokens"
                }
            },
            "source_tokenizer": {
                "type": "word",
                "word_splitter": {
                    "type": "simple"
                }
            },
            "target_namespace": "target_tokens",
            "target_token_indexers": {
                "tokens": {
                    "namespace": "target_tokens"
                }
            },
            "truncate_source_len": 400,
            "truncate_target_len": 100
        },
        "num_workers": 10
    },
    "iterator": {
        "type": "multiprocess",
        "base_iterator": {
            "type": "bucket",
            "batch_size": 8,
            "padding_noise": 0,
            "sorting_keys": [
                [
                    "source_tokens",
                    "num_tokens"
                ]
            ]
        },
        "num_workers": 10
    },
    "model": {
        "type": "copynet",
        "attention": {
            "type": "bilinear",
            "matrix_dim": 200,
            "vector_dim": 200
        },
        "beam_size": 3,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0,
            "hidden_size": 100,
            "input_size": 45,
            "num_layers": 2
        },
        "max_decoding_steps": 20,
        "source_embedder": {
            "token_characters": {
                "type": "character_encoding",
                "embedding": {
                    "embedding_dim": 10
                },
                "encoder": {
                    "type": "lstm",
                    "bidirectional": true,
                    "dropout": 0,
                    "hidden_size": 10,
                    "input_size": 10,
                    "num_layers": 2
                }
            },
            "tokens": {
                "type": "embedding",
                "embedding_dim": 25,
                "trainable": true,
                "vocab_namespace": "source_tokens"
            }
        },
        "target_embedding_dim": 10,
        "token_based_metric": {
            "type": "token_sequence_accuracy"
        }
    },
    "train_data_path": "data/cnndm/train.txt",
    "validation_data_path": "data/cnndm/val.txt",
    "trainer": {
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "type": "cosine",
            "eta_mul": 0.9,
            "t_initial": 5,
            "t_mul": 1.5
        },
        "num_epochs": 80,
        "optimizer": {
            "type": "sgd",
            "lr": 0.1
        },
        "patience": 10,
        "should_log_learning_rate": true,
        "should_log_parameter_statistics": false
    },
    "vocabulary": {
        "tokens_to_add": {
            "target_tokens": [
                "@COPY@"
            ]
        }
    }
}