{
  "dataset_reader": {
    "target_namespace": "joined_tokens",
    "type": "copynet",
    "lazy": true,
    "truncate_source_len": 400,
    "truncate_target_len": 100,
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "joined_tokens"
      }
    },
    "source_tokenizer":
    {
        "type" : "word",
        "word_splitter":
        {
            "type": "simple"
        }
    }
  },
  "vocabulary": {
    "max_vocab_size" : 50000,
    "tokens_to_add": {
        "joined_tokens": ["@COPY@"]
    }
  },
  "train_data_path": "data/cnndm/train.txt",
  "validation_data_path": "data/cnndm/val.txt",
  "datasets_for_vocab_creation": ["train"],
  "model": {
    "type": "mem2seq",
    "source_namespace": "joined_tokens",
    "target_namespace": "joined_tokens",
    "target_embedding_dim": 100,
    "beam_size": 5,
    "max_decoding_steps": 100,
    "token_based_metric": {
      "type": "token_sequence_accuracy"
    }
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 32,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    },
    "learning_rate_scheduler": 
    {
      "type": "cosine",
      "t_initial": 5,
      "t_mul": 1.5,
      "eta_mul": 0.9
    },
    "num_epochs": 80,
    "cuda_device": 1,
    "patience": 10,
    "should_log_learning_rate": true,
    "should_log_parameter_statistics": false
  }
}
